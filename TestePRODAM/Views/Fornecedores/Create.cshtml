@model TestePRODAM.Models.Fornecedor

@{
    ViewData["Title"] = "Novo Fornecedor";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="EmpresaId" class="control-label">Empresa</label>
          <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.EmpresaId"></select>
        </div>
        <div class="form-group">
          <label asp-for="Nome" class="control-label">Nome do Fornecedor</label>
          <input asp-for="Nome" class="form-control" />
          <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Documento" class="control-label"></label>
          <input asp-for="Documento" class="form-control" />
          <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="TipoFornecedor" class="control-label"></label><br />
          <input type="radio" value="1" asp-for="TipoFornecedor" checked onclick="mostraCamposPessoaFisica();" /> Pessoa Física<br />
          <input type="radio" value="2" asp-for="TipoFornecedor" onclick="escondeCamposPessoaFisica();"/> Pessoa Jurídica
        </div>
        <div class="form-group">
          <label asp-for="DataCadastro" class="control-label"></label>
          <input asp-for="DataCadastro" class="form-control" />
          <span asp-validation-for="DataCadastro" class="text-danger"></span>
        </div>
        <div id="pessoaFisica">
          <div class="form-group">
            <label asp-for="RG" class="control-label"></label>
            <input asp-for="RG" class="form-control" />
            <span asp-validation-for="RG" class="text-danger"></span>
          </div>
          <div class="form-group">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group">
          <label asp-for="Telefone" class="control-label"></label>
          <input asp-for="Telefone" class="form-control" />
          <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="form-group">
          <label asp-for="Celular" class="control-label"></label>
          <input asp-for="Celular" class="form-control" />
          <span asp-validation-for="Celular" class="text-danger"></span>
        </div>
        <div class="form-group">
          <input type="submit" value="Adicionar Fornecedor" class="btn btn-primary" />
        </div>
      </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
  escondeCamposPessoaFisica();
  mostraCamposPessoaFisica();
</script>
}
